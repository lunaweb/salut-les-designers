      img.c-echo__portrait (src=audio.portrait.url(w: 56, h: 56) width="56" height="56" alt=audio.title srcset="#{audio.portrait.url(w: 112, h: 112)} 2x")
      .c-echo__bars
        - for i in 1..10
          .c-echo__bar
	.c-echo__description
