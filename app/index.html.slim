- audio = dato.audios.first()

h1.u-visually-hidden Salut Les Designers !

section.c-hero
  .c-hero__plane
    img.c-hero__logo (src="/assets/images/front/logo-text.svg" alt="Salut Les designers !")

  a.c-hero__echo.c-echo.c-echo--floating (href="/episodes/#{audio.permalink}.html" data-teaser="#{audio.teaser_sound ? audio.teaser_sound.url() : ''}")
